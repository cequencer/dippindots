#!/bin/bash

if [[ -z $1 ]]; then
    N_SONGS=10
else
    N_SONGS=$1
fi

if [[ $2 == "--clear" ]]; then
    mpc clear
fi

# mopidy requires local files be specified as a `file://` URI
find ~/musics -name '*.mp3' -type f | shuf -n$N_SONGS | sed 's|^|file://|' | while read -r line; do
    mpc add "$line"
done
