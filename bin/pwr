#!/bin/bash

read -rep "; shutdown, sleep, or restart? `echo $'\n> '`"

if [[ $REPLY = shutdown ]]; then
    echo "Shutting down"
    systemctl poweroff
elif [[ $REPLY = restart ]]; then
    echo "Restarting"
    systemctl reboot
elif [[ $REPLY = sleep ]]; then
    echo "Sleeping"
    sleep 2; systemctl hybrid-sleep
fi