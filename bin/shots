#!/bin/bash
# easily browse and select screenshots

SHOTS_DIR=~/docs/shots

# make selection
CHOICE=$(ls -t -d1 $SHOTS_DIR/** | sed -e 's/^/IMG:/' -e 's/\([^\/]\+$\)/\1\t\1/' | dmenu -l 10 -p "shots")

# copy path or data
ACTION=$(echo -e "Path\nData\nView\nDelete" | dmenu -p "Copy:")

IMGPATH=$SHOTS_DIR/$CHOICE

case $ACTION in
    # copy abs path to clipboard
    "Path") echo $IMGPATH | xsel -b;;

    # copy image data to clipboard
    "Data") imgclip $IMGPATH;;

    # view
    "View") feh -Fd $IMGPATH;;

    # delete
    "Delete") rm $IMGPATH;;
    *) ;;
esac

