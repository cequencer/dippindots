[global]
    # refer to <https://github.com/knopwob/dunst/blob/master/dunstrc>
    # put colors in quotation marks so they aren't mistaken as comments

    font = terminus 12
    markup = yes
    plain_text = no
    word_wrap = yes
    alignment = left
    indicate_hidden = yes
    show_age_threshold = 60
    idle_threshold = 120
    ignore_newline = no
    transparency = 0
    shrink = no
    sticky_history = no
    history_length = 20
    show_indicators = no
    monitor = 0

    # mouse/keyboard/none
    follow = mouse

    # sort by urgency
    sort = yes

    # %s=summary, %b=body
    format = "%s\n\n%b"

    # [{width}]x{height}[+/-{x}+/-{y}]
    # height is in number of notifications
    # everything else in pixels
    geometry = "400x5-8+26"

    notification_height = 0
    line_height = 2
    separator_height = 2
    padding = 16
    horizontal_padding = 16
    icon_position = left
    max_icon_size = 128

    # auto/foreground/frame/a color
    separator_color = "#303030"

    dmenu = "/home/ftseng/.bin/dmenu -p dunst:"
    browser = /usr/local/bin/firefox -new-tab

[frame]
    width = 5
    color = "#1cbc5f"

[shortcuts]
# close notification
    close = ctrl+shift+period

    # close all notifications
    close_all = ctrl+shift+space

    # redisplay last message (nb: grave is "`")
    history = ctrl+grave

    # context menu
    context = ctrl+space


[urgency_low]
    background = "#444444"
    foreground = "#ffffff"
    timeout = 2
    icon = ""

[urgency_normal]
    background = "#444444"
    foreground = "#ffffff"
    timeout = 2
    icon = ""

[urgency_critical]
    background = "#ef3838"
    foreground = "#ffffff"
    timeout = 0
    icon = ""
