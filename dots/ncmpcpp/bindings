# defaults are at /usr/local/share/doc/ncmpcpp/bindings

def_key "k"
    scroll_up

def_key "j"
    scroll_down

def_key "l"
    next_column

def_key "h"
    previous_column

def_key "."
    show_lyrics

def_key "ctrl-j"
  page_down

def_key "ctrl-k"
  page_up

def_key "ctrl-g"
  move_home

def_key "ctrl-b"
  move_end

def_key "ctrl-i"
  select_item

def_key "x"
  delete_playlist_items

def_key "x"
  delete_stored_playlist

def_key "ctrl-x"
  delete_browser_items
